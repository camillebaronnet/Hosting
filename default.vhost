<VirtualHost *:80>

	ServerAdmin webmaster@localhost
	
	DocumentRoot /home/www/public
	<Directory /home/www/public/>
		Options Indexes FollowSymLinks MultiViews
		AllowOverride All
		Order allow,deny
		allow from all
	</Directory>
	
	PHPINIDir /home/conf/

	LogLevel error
	ErrorLog /home/logs/error.log
	CustomLog /home/logs/access.log combined

</VirtualHost>